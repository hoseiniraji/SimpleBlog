@model SimpleBlog.Framework.PageList<SimpleBlog.Models.BlogPost>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Date
            </th>
            <th>
                Author
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img style="max-height: 90px; width: auto;" src="@item.GetMainImage()" />
                    <span>@item.GetTitle()</span>
                </td>
                <td>
                    @item.GetDate().ToShortDateString()
                </td>
                <td>
                    @if (item.Author != null)
                    {
                        <span>@item.Author.UserName</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="History" asp-route-id="@item.Id">All Versions</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
